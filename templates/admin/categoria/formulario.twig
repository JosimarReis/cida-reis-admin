{% extends 'base.html.twig' %}
{% block body %}
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Categoria</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           {{ title }} categoria
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">

                                    {{ form_start(form, {'attr': {'novalidate': 'novalidate','role':'form'}}) }}
                                    {{ form_errors(form) }}

                                    <div class="form-group">
                                        {{ form_label(form.nome) }}
                                        {{ form_widget(form.nome, {'attr':{'class':'form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_label(form.ativo) }}
                                        {{ form_widget(form.ativo, {'attr':{'class':'form-control'}}) }}
                                    </div>
                                        {{ form_widget(form.salvar, {'attr':{'class':'btn btn-success'}}) }}
                                        <a href="/admin/categoria" class="btn btn-link">Cancelar</a>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                </div>
            </div>
</div>

{% endblock %}